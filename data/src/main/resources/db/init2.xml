<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="update-tables" author="postgres">
        <!-- Update tables -->
        <addColumn tableName="employees">
            <column name="department" type="varchar(50)">
                <constraints nullable="false"
                             foreignKeyName="department_name"
                             referencedTableName="departments" referencedColumnNames="name"/>
            </column>
        </addColumn>

        <addColumn tableName="departments">
            <column name="director" type="int">
                <constraints nullable="true"
                             foreignKeyName="director_id"
                             referencedTableName="employees" referencedColumnNames="id"/>
            </column>
            <column name="hierarchy" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>



