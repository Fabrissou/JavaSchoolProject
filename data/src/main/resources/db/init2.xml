<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="update-tables" author="postgres">
        <addAutoIncrement columnName="id"
                          tableName="employees"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"/>
        <addAutoIncrement columnName="department_id"
                          tableName="departments"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"/>
        <addPrimaryKey tableName="employees"
                       columnNames="id"/>
        <addPrimaryKey tableName="departments"
                       columnNames="name"/>
        <addForeignKeyConstraint baseTableName="departments"
                                 baseColumnNames="director"
                                 constraintName="director_id"
                                 referencedTableName="employees"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="employees"
                                 baseColumnNames="department"
                                 constraintName="d"
                                 referencedTableName="departments"
                                 referencedColumnNames="name"/>


    </changeSet>
</databaseChangeLog>



